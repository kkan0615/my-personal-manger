{
  "name": "my-personal-manager",
  "author": "Youngjin Kwak",
  "description": "Create your personal manager",
  "version": "0.0.5",
  "main": "src/main/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build",
    "serve": "vite preview",
    "electron": "wait-on tcp:3000 && cross-env IS_DEV=true electron .",
    "electron:pack": "electron-builder --dir",
    "electron:build": "tsc -p src/main/tsconfig.json",
    "electron:dev": "yarn electron:build && concurrently -k \"cross-env BROWSER=none yarn dev\" \"yarn electron\"",
    "electron:builder": "electron-builder",
    "electron:builder-publish": "electron-builder --publish=always",
    "build:for:electron": "vue-tsc --noEmit && cross-env ELECTRON=true vite build",
    "app:build": "yarn electron:build && yarn build:for:electron && yarn electron:builder",
    "app:publish": "yarn electron:build && yarn build:for:electron && yarn electron:builder-publish"
  },
  "build": {
    "appId": "com.my-website.my-personal-manager",
    "productName": "My Personal Manager",
    "copyright": "Copyright Â© 2021 ${author}",
    "publish": [
      {
        "provider": "github",
        "owner": "kkan0615",
        "repo": "my-personal-manger"
      }
    ],
    "mac": {
      "category": "public.app-category.utilities"
    },
    "win": {
      "publish": [
        "github"
      ],
      "target": [
        "zip",
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "files": [
      "dist/**/*",
      "src/main/**/*"
    ],
    "extraResources": [
      {
        "from": "./src/main/default/",
        "to": "default",
        "filter": [
          "**/*"
        ]
      }
    ]
  },
  "devDependencies": {
    "@popperjs/core": "^2.10.2",
    "@types/uuid": "^8.3.1",
    "@typescript-eslint/eslint-plugin": "^5.2.0",
    "@typescript-eslint/parser": "^5.2.0",
    "@vitejs/plugin-vue": "^1.9.3",
    "@vue/eslint-config-typescript": "^9.0.0",
    "concurrently": "^6.3.0",
    "cross-env": "^7.0.3",
    "electron": "^15.3.0",
    "electron-builder": "^22.13.1",
    "eslint": "^8.1.0",
    "eslint-plugin-vue": "^8.0.3",
    "sass": "^1.43.4",
    "typescript": "^4.4.3",
    "vite": "^2.6.4",
    "vue-tsc": "^0.3.0",
    "wait-on": "^6.0.0"
  },
  "dependencies": {
    "@vueform/multiselect": "^2.2.0",
    "autoprefixer": "^10.4.0",
    "bootstrap": "^5.1.3",
    "dayjs": "^1.10.7",
    "electron-is-dev": "^2.0.0",
    "electron-store": "^8.0.1",
    "postcss": "^8.3.11",
    "tailwindcss": "^2.2.19",
    "uuid": "^8.3.2",
    "v-calendar": "^3.0.0-alpha.6",
    "vue": "^3.2.16",
    "vue-router": "4",
    "vuex": "^4.0.2"
  }
}
